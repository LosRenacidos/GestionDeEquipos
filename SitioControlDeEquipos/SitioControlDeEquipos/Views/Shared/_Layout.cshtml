<!DOCTYPE html>
<html lang="es">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Sistema de Gestión de Equipos de Cómputo</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <img src="~/Images/logoWebsite.png" />
                </div>
                <div class="float-right">
                    
                    
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>                           
                            <li>@Html.ActionLink("Gestión de averias", "GesAveria", "Home")</li>
                            <li>@Html.ActionLink("Actualización de averias", "ActAveria", "Home")</li>
                            <li>@Html.ActionLink("Gestión de equipos", "GesEquipo", "Home")</li>
                            <li>@Html.ActionLink("Actualización de equipos", "Index", "ActualizarEquipo")</li>
                            <li>@Html.ActionLink("Consulta de equipos", "ConEquipo", "Home")</li>

                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Sistema de Gestión de Equipos de Cómputo </p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
